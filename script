let currentIndex = 0;


const images = ["img/2_DISEÑO DE INTERIOR con madera.jpg","img/1_muebles para baños.jpg","img/3_DISEÑO DE INTERIOR MINIMALISTA.jpg"];  // Agrega aquí las rutas de tus imágenes

/*function showSlide(index) {
